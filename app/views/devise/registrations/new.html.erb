<% provide :title, t("users.new.title") %>
<div class="row signup-form">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="form-title"><%= t ".title" %></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t ".character_minimum"%></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input"  %>
      </div>

      <div class="field select-box form-label ">
        <%= f.label :role, class: "form-label" %><br>
        <%= f.select :role, ["normal", "creator"], {}, {class: "form-input"} %>
      </div>

      <div class="form-label image-upload">
        <%= f.label :picture, t(".upload"), class: "control-label file-input" %>
        <%= f.file_field :picture %>
        <span class="help-block" id="hint_date1">
          <%= t ".image" %>
        </span>
      </div>

      <div class="actions">
        <%= f.submit t(".title"), class: "W2Gbutton form-label" %>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
