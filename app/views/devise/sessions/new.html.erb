<div class="row login-form">
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4">
    <h1 class="form-title text-center"><%= t "sessions.new.tit" %></h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
        </div>
        <div class="field">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit t("sessions.new.login"), class:"W2Gbutton" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>
