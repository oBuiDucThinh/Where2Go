<% provide(:title, @user.name) %>
<div class="container user-profile">
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= @user.name %>
        </h1>
        <p><%= @user.email %></p>
        <p><%= @user.phone %></p>
      </section>
    </aside>
    <div class="col-md-8 user-tab">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#join"><%= t ".join" %></a></li>
        <li><a data-toggle="tab" href="#like"><%= t ".subcribe" %></a></li>
        <% if @user.creator? || admin_user? %>
          <li><a data-toggle="tab" href="#create"><%= t ".create" %></a></li>
        <% end %>
      </ul>

      <div class="tab-content clearfix">
        <div id="join" class="tab-pane fade in active"></div>
        <div id="like" class="tab-pane fade"> </div>
        <% if @user.creator? || admin_user? %>
          <div id="create" class="tab-pane fade"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
