<li>
  <%= gravatar_for user, size: Settings.users.index.avatar.size %>
  <p> <%= t".user_name" %> <%= link_to user.name, user %> </p>
  <p> <%= t".role" %> <%= user.role %> </p>
  <p>
    <% if !user.admin? %>
      <%= t".manage_user" %>
      <%= link_to t(".delete"), user, method: :delete, 
        data: { confirm: "You sure?" } %>
      <%= link_to t(".edit"), edit_user_path(user) %>
    <% end %>
  </p>
</li>
