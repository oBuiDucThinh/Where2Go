<h4><%= t ".leave_comment" %></h4>
<%= form_for [@event, @event.comments.build], remote: true do |f| %>
  <div class="field form-group">
    <%= f.label :content %><br />
    <%= f.text_area :content, rows: "5" %>
  </div>
  <div class="actions">
    <%= f.submit t(".comment"), class:"W2Gbutton" %>
  </div>
<% end %>
