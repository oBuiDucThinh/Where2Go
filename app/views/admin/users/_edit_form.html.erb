<div id="edit-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"> <%= t ".modal_title" %> <%= @user.name %> </h4>
      </div>
      <%= form_for [:admin, @user], remote: true do |f| %>
        <div class="modal-body">
          <div class="radio-inline">
            <%= f.radio_button :role, :normal %>
            <%= f.label :role, t(".normal"), value: "normal", class: "radio-value" %>
          </div>
          <div class="radio-inline">
            <%= f.radio_button :role, :creator %>
            <%= f.label :role, t(".creator"), value: "creator", class: "radio-value" %>
          </div>
          <div class="radio-inline">
            <%= f.radio_button :role, :admin %>
            <%= f.label :role, t(".admin"), value: "admin", class: "radio-value" %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <div class="form-lable col-lg-4  col-lg-offset-6">
              <%= f.submit t(".save_changes"), class: "btn btn-primary" %>
            </div>
            <div class="form-lable col-lg-2">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <%= t ".cancel" %>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
