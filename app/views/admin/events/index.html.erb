<% provide :title, t(".page_name") %>
<div class="users-index">
 <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t".all_event"%></h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
          </div>
          <% if @events.any? %>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <table width="100%" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th><%= t ".id" %></th>
                    <th><%= t ".event_title" %></th>
                    <th><%= t ".city" %></th>
                    <th><%= t ".creator" %></th>
                    <th><%= t ".created_at" %></th>
                    <th><%= t ".date_start" %></th>
                    <th><%= t ".date_end" %></th>
                    <th><%= t ".state" %></th>
                    <th><%= t ".manage" %></th>
                  </tr>
                </thead>
                <%= render partial: "event", collection: @events %>
                <%= paginate @events %>
              </table>
            </div>
            <!-- /.panel-body -->
          <% else %>
            <%= t ".no_event" %>
          <% end %>
        </div>
        <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
</div>
