<% if is_creator? %>
  <div class="container-fluid event-index">
    <div class="row new-event">
      <div class="col-lg-5 col-md-5 col-sm-5 progress-sidebar">
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 1: Choose a nice event name", "#form-name" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 2: Select city where your event is held", "#form-location" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 3: Give us your event's detail address", "#form-address" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 4: What type of your event?", "#form-category" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 5: Day start event", "#form-start" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 6: The day event will end", "#form-end" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 7: Detail description of this event", "#form-des" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 left-nav">
          <%= link_to "Step 8: Upload cover image of event", "#form-image" %>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-lg-offset-5 col-md-offset-5 col-sm-offset-3">
        <h1 class="form-title"><%= t ".heading" %></h1>
        <%= form_for @event do |f| %>
          <div class="form-label">
            <%= f.label :title, t(".name"), class: "form-label anchor", id: "form-name" %>
            <%= f.text_field :title, class: "form-input", placeholder: t(".event_name") %>
            <span class="help-block" id="hint_name">
              <%= t ".name "%>
            </span>
          </div>

          <div class="form-label">
            <label class="form-label anchor" id="form-location">
              <%= t ".location" %> <span class="asteriskField">*</span>
            </label>
            <%= f.collection_check_boxes :city_ids, City.all, :id, :city_name do |t| %>
              <div class="checkbox">
                <%= t.check_box%>
                <%= t.label %>
              </div>
            <% end %>
            <span class="help-block" id="hint_select1">
              <%= t ".choose_location" %>
            </span>
          </div>

          <div class="form-label">
            <%= f.label :address, t(".address_label"), class: "form-label anchor", id: "form-address" %>
            <%= f.text_field :address, class: "form-input", placeholder: t(".address_holder") %>
            <span class="help-block" id="hint_name">
              <%= t ".detail_address"%>
            </span>
          </div>

          <div class="form-label">
            <label class="form-label anchor" id="form-category">
              <%= t ".category" %> <span class="asteriskField">*</span>
            </label>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
              <div class="checkbox">
                <%= b.check_box %>
                <%= b.label %>
              </div>
            <% end %>
            <span class="help-block" id="hint_checkbox">
              <%= t ".category" %>
            </span>
          </div>

          <div class="form-label">
            <%= f.label :date_start, t(".start"), class: "control-label anchor", id: "form-start" %>
            <%= f.date_field :date_start, class: "form-input" %>
            <span class="help-block" id="hint_date">
              <%= t ".start" %>
            </span>
          </div>

          <div class="form-label">
            <%= f.label :date_end, t(".end"), class: "control-label anchor", id: "form-end" %>
            <%= f.date_field :date_end, class: "form-input" %>
            <span class="help-block" id="hint_date1">
              <%= t ".end" %>
            </span>
          </div>

          <div class="form-label">
            <%= f.label :content, t(".des"), class: "control-label anchor", id: "form-des" %>
            <%= f.text_area :content, id: "markdown", class: "form-control", cols: "40", rows: "10",
              placeholder: t(".event_des") %>
            <span class="help-block" id="hint_message">
              <%= t ".description" %>
            </span>
          </div>

          <div class="form-label image-upload">
            <%= f.label :picture, t(".upload"), class: "control-label anchor file-input", id: "form-image" %>
            <%= f.file_field :picture %>
            <span class="help-block" id="hint_date1">
              <%= t ".image" %>
            </span>
          </div>

          <div class="form-label">
            <div>
              <%= f.submit t(".sub"), class: "W2Gbutton" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <% render "shared/prevent" %>
<% end %>
