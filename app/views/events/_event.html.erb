<div class="col-md-3 col-lg-3 col-sm-6 hero-feature">
  <div class="thumbnail">
    <div class="row">
      <div class="status">
        <% if event.is_open && event.date_start > Date.today %>
          <span class="soon"><%= t ".soon" %></span>
        <% elsif event.is_open %>
          <span class="open"><%= t ".happening"%></span>
        <% else %>
          <span class="closed"><%= t ".closed" %></span>
        <% end %>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= image_tag event.picture, class: "event-banner" %>
      </div>
    </div>
    <div class="caption">
      <h3 class="event_title"><%= event.title %></h3>
      <p class="event_title"><%= event.content %></p>
      <p>
        <div class="row equal">
          <div class="col-md-4 col-sm-4 col-lg-4">
            <i class="fa fa-heart" aria-hidden="true"></i>
          </div>
          <div class="col-md-4 col-sm-4 col-lg-4">
            <i class="fa fa-sign-in" aria-hidden="true"></i>
          </div>
          <div class="col-md-4 col-sm-4 col-lg-4">
            <%= link_to "More", event, class: "more btn" %>
          </div>
        </div>
      </p>
    </div>
  </div>
</div>
